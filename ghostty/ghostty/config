theme = Gruvbox Dark

font-size = 15

shell-integration-features = no-cursor
cursor-style = block
cursor-style-blink = false

window-padding-x = 14
window-padding-y = 14

keybind = cmd+ctrl+h=new_split:left
keybind = cmd+ctrl+j=new_split:down
keybind = cmd+ctrl+k=new_split:up
keybind = cmd+ctrl+l=new_split:right

keybind = opt+h=goto_split:left
keybind = opt+j=goto_split:down
keybind = opt+k=goto_split:up
keybind = opt+l=goto_split:right

keybind = ctrl+opt+h=resize_split:left,20
keybind = ctrl+opt+j=resize_split:down,20
keybind = ctrl+opt+k=resize_split:up,20
keybind = ctrl+opt+l=resize_split:right,20

